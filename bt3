#include <stdio.h>
#include <math.h>

int main() {
    int n;

    // Nhập số nguyên dương từ bàn phím
    printf("Nhap vao 1 so nguyen duong n > 2: ");
    scanf("%d", &n);

    // Kiểm tra điều kiện n >= 2
    if (n < 2) {
        printf("Loi: Nhap n < 2\n");
    } else {
        int flag = 0; // Biến cờ: 0 = nguyên tố, 1 = không nguyên tố

        // Kiểm tra từ 2 đến căn bậc hai của n
        for (int i = 2; i <= sqrt(n); i++) {
            if (n % i == 0) { // Nếu n chia hết cho i -> không phải số nguyên tố
                flag = 1; 
                break; // Dừng vòng lặp ngay khi tìm thấy ước
            }
        }

        // In kết quả
        if (flag == 0) {
            printf("%d la so nguyen to\n", n);
        } else {
            printf("%d khong phai la so nguyen to\n", n);
        }
    }

    return 0;
}
