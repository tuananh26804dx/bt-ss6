#include <stdio.h>

int main() {
    int n, tong = 0;

    // Nhập giá trị n từ người dùng
    printf("Nhap so nguyen duong n: ");
    scanf("%d", &n);

    // Kiểm tra tính hợp lệ của n
    if (n <= 0) {
        printf("Vui long nhap mot so nguyen duong lon hon 0!\n");
        return 0; // kết thúc chương trình nếu n không hợp lệ
    }

    printf("\n=== QUA TRINH CONG DON TU 1 DEN %d ===\n", n);

    // Vòng lặp tính tổng
    for (int i = 1; i <= n; i++) {
        tong += i;
        printf("Buoc %2d: tong = tong + %2d --> tong = %d\n", i, i, tong);
    }

    // In kết quả cuối cùng
    printf("\n---------------------------------\n");
    printf("Tong cac so tu 1 den %d la: %d\n", n, tong);
    printf("---------------------------------\n");

    return 0;
}
