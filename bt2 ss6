#include <stdio.h>

int main() {
    // In tiêu đề
    printf("Cac so chan tu 1 den 100 la:\n");

    // Duyệt qua các số từ 1 đến 100
    for (int i = 1; i <= 100; i++) {
        // Nếu số chia hết cho 2 thì là số chẵn
        if (i % 2 == 0) {
            // In số chẵn, căn đều mỗi số 5 khoảng cách
            printf("%-5d", i);
        }
    }

    // Xuống dòng sau khi in hết các số
    printf("\n");

    return 0;
}
