#include <stdio.h>

int main() {
    int tong = 0; // biến lưu tổng
    int i = 1;    // biến đếm từ 1 đến 100

    // Vòng lặp while
    while (i <= 100) {
        tong += i; // cộng dồn i vào tong
        i++;       // tăng i lên 1
    }

    printf("Tong tu 1 den 100 la: %d\n", tong);

    return 0;
}

